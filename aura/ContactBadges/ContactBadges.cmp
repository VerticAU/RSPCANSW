<aura:component description="ContactBadges"
                controller="ContactBadgesCtrl"
                implements="flexipage:availableForAllPageTypes,force:hasRecordId,force:hasSObjectName">

    <aura:attribute type="Map" access="private" name="badgesVM"/>

    <lightning:notificationsLibrary aura:id="notifLib"/>

    <aura:handler name="init" value="{!this}" action="{!c.handleInit}"/>
    <aura:handler event="force:refreshView" action="{!c.handleInit}"/>

    <c:Utils context="{!this}"/>

    <div class="slds-m-left--x-small">
        <c:Badges badges="{!v.badgesVM.badges}">
            <aura:set attribute="dynamicBadges">
                <c:DynamicBadges recordId="{!v.recordId}" sObjectName="{!v.sObjectName}"/>
            </aura:set>
        </c:Badges>
    </div>

</aura:component>